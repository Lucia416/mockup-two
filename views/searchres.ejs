<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Coupon Warrior | <%= br1.brand1 %> <%= br1.ProductType1 %> &amp; <%= br2.brand2 %> <%= br2.ProductType2 %> Comparisons</title>
    
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  </head>

    <body class='prod-background'>
      <% include ./partial/_navbar.ejs %>

      <h1>may the luck be with you</h1>


      <div class="row">
        <div class="card_products col s4 m5" id="firstProd">
          <div class="card">
            <div class="card-image">
              <img id="prodImg1" src="<%- br1.image1 %>">
            </div>
            <div class="card-content">
              <h6 id='pro1'><%= br1.pTitle1 %></h6>
               <p><%= br1.ProductType1 %>
               <!-- <%= br1.description %> -->
              </p>
                <div class='fav1'>
                   <p><img id='heart1' src='/images/heart.png'/>click to add on your favorite list </p>
                </div>
                <div class='fav2'>
                   <p><img id='heart2' src='/images/heartFilled.png'/> added to favorite list</p>
                </div>
            </div>
            <div class="card-action">
              <a href="<%- br1.DetailPageURL1 %>">Click here to buy the item!</a>
            </div>
          </div>
         <button type="submit" class ='voteBtn' id="votePro1">Vote!</button>
        </div>

          <% include ./partial/_results.ejs %>

        <div class="card_products col s4 m5" id='secondProd'>
          <div class="card">
            <div class="card-image">
              <img id "prodImg2" src="<%- br2.image2 %>">
            </div>
            <div class="card-content">
              <h6 id='pro2'><%= br2.pTitle2 %></h6>
              <p>
                 <%= br2.ProductType2 %>
                 <!-- <%= br2.description %> -->
              </p>
              <div class='fav3'>
                 <p><img id='heart3' src='/images/heart.png'/>click to add on your favorite list </p>
              </div>
              <div class='fav4'>
                 <p><img id='heart4' src='/images/heartFilled.png'/> added to favorite list</p>
              </div>
            </div>
            <div class="card-action">
              <a href="<%- br2.DetailPageURL2 %>">Click here to buy the item!</a>
            </div>
          </div>
          <button type="submit" class ='voteBtn' id="votePro2">Vote!</button>
        </div>
      </div>

        <div class="meter">
          <span style="height: 1%"></span>
        </div>

      <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>
      <script type="text/javascript" src="/scripts/app.js"></script>
      <script type="text/javascript" src="./scripts/vote.js"></script>
      <script type="text/javascript" src="/scripts/addFavorites.js"></script>
      <script type="text/javascript" src="./scripts/addScores.js"></script>
    </body>

</html>
